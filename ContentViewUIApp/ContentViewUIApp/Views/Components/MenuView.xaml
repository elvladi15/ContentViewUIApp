<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewUIApp.Views.Components.MenuView">
    <StackLayout>
        <Image Source="{Binding ImagePath}" HeightRequest="45"/>
        <Label Text="{Binding Title}" Style="{StaticResource TitleLabelStyle}"/>
        <Label Text="{Binding PlaceCount, StringFormat='{0} Place'}" Style="{StaticResource DetailLabelStyle}"/>
    </StackLayout>
</Frame>